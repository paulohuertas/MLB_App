@model MLB_App.Models.Player
@using MLB_App.Utils;

@{
    ViewBag.Title = "Player Detail";
    var player = Model;
}

@{
    string teamLogo = String.Empty;
    bool teamSrc = StaticData.TeamLogos.TryGetValue(player.team, out teamLogo);

    string lastGamePlayed = (string.IsNullOrEmpty(player.lastGamePlayed) ? "" : player.lastGamePlayed.Substring(9));
}

<div>
    <h2>Player Detail</h2>
    <h4 class="h4">@player.longName #@player.jerseyNum</h4>
</div>

@if(teamSrc)
{
    <img src="@teamLogo" style="width: 100px; height: 100px; margin-inline: auto; border-radius: 50%;" />
}

<div>
    <hr />
    <dl class="dl-horizontal">
    </dl>
</div>
<table class="table table-hover">
    <tr>
        <th scope="col" class="text-center">Player</th>
        <th scope="col" class="text-center">Jersey Num</th>
        <th scope="col" class="text-center">Team</th>
        <th scope="col" class="text-center">Birthday</th>
        <th scope="col" class="text-center">Position</th>
        <th scope="col" class="text-center">Last Game Played</th>
    </tr>
    <tr class="active">
        <td scope="row" class="text-center"><figure><img id="player-img" class="img-rounded" src="@player.mlbHeadshot" /><figcaption>@player.longName</figcaption></figure></td>
        <td scope="row" class="text-center col-md-2">#@player.jerseyNum</td>
        <td scope="row" class="text-center col-md-2">@player.teamAbv</td>
        <td scope="row" class="text-center col-md-2">@player.bDay</td>
        <td scope="row" class="text-center col-md-2">@player.pos</td>
        <td scope="row" class="text-center col-md-2">@lastGamePlayed</td>
    </tr>
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>

