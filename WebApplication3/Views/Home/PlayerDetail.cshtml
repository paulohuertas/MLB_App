@model MLB_App.Models.PlayerDetail

@{
    ViewBag.Title = "PlayerDetail";
}

@{
    string teamLogo = String.Empty;
    bool teamSrc = MLB_App.Utils.StaticData.TeamLogos.TryGetValue(Model.player.team, out teamLogo);
}

<div>
    <h2>Player Detail</h2>
    <h4 class="h4">@Model.player.longName #@Model.player.jerseyNum</h4>
</div>

@if(teamSrc)
{
    <img src="@teamLogo" style="width: 100px; height: 100px; margin-inline: auto; border-radius: 50%;" />
}

<div>
    <hr />
    <dl class="dl-horizontal">
    </dl>
</div>
<table class="table table-hover">
    <tr>
        <th scope="col" class="text-center">Player</th>
        <th scope="col" class="text-center">Jersey Num</th>
        <th scope="col" class="text-center">Team</th>
        <th scope="col" class="text-center">Birthday</th>
        <th scope="col" class="text-center">Position</th>
        <th scope="col" class="text-center">Last Game Played</th>
    </tr>
    <tr class="active">
        <td scope="row" class="text-center"><figure><img id="player-img" class="img-rounded" src="@Model.player.mlbHeadshot" /><figcaption>@Model.player.longName</figcaption></figure></td>
        <td scope="row" class="text-center col-md-2">#@Model.player.jerseyNum</td>
        <td scope="row" class="text-center col-md-2">@Model.player.teamAbv</td>
        <td scope="row" class="text-center col-md-2">@Model.player.bDay</td>
        <td scope="row" class="text-center col-md-2">@Model.player.pos</td>
        <td scope="row" class="text-center col-md-2">@Model.player.lastGamePlayed.Substring(9)</td>
    </tr>
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<script src="~/Scripts/PlayerDetail.js"></script>
